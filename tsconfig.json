{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "customConditions": [
      "browser",
      "development"
    ],
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "types": [
      "react"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}