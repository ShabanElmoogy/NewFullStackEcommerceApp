{
  "expo": {
    "name": "mobile",
    "slug": "mobile",
    "scheme": "notjust-ecom",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "locales": {
      "en": "./locales/en.json",
      "ar": "./locales/ar.json"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "CFBundleLocalizations": [
          "en",
          "ar"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.shabanelmogy.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      [
        "expo-navigation-bar",
        {
          "backgroundColor": "#000000",
          "barStyle": "light",
          "behavior": "inset-swipe"
        }
      ],
      [
        "expo-system-ui",
        {
          "rootViewBackgroundColor": "#000000"
        }
      ]
    ]
  }
}
